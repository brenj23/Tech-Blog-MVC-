<div class="post">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p><strong>Author:</strong> {{user.username}}</p>
  <div class="comments">
    {{#each comments}}
      <div class="comment">
        <p>{{content}}</p>
        <p><strong>Comment by:</strong> {{user.username}}</p>
      </div>
    {{/each}}
  </div>
</div>
